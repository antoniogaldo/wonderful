{% extends '::base.html.twig' %}
{% block body %}
<div class="container">
<div class="col-md-12">
          <h2>Modifica pacchetto</h2>
          <br>
 {{ form_start(form, { 'attr': {'class': 'form-horizontal'} })}}
            <div class="form-group">
              <label for="nome_pacchetto" class="col-sm-2 control-label">Nome</label>
              <div class="col-sm-3">
                
                {{ form_row(form.nomePacchetto, { 'attr': {'class': 'form-control', 'placeholder': 'nome'  } })}}
              </div>
            </div>
            
            <div class="form-group">
              <label for="data_inizio" class="col-sm-2 control-label">Data inizio</label>
              <div class="col-sm-6">
                
                {{ form_row(form.dataInizio, { 'attr': {'placeholder': 'data inizio'  } })}}
              </div>
            </div>
            <div class="form-group">
              <label for="data_fine" class="col-sm-2 control-label">Data fine</label>
              <div class="col-sm-6">
                
                {{ form_row(form.dataFine, { 'attr': {'placeholder': 'data fine'  } })}}
              </div>
            </div>
            
            
            
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-2">
                
                {{ form_row(form.save, { 'attr': {'class': 'btn btn-default' } })}}
				<!-- fine form aggiungi cliente -->
              </div>
              <!-- fine colonna form aggiungi cliente -->
          
          
          {{ form_end(form) }}
{%endblock%}