{% extends '::base.html.twig' %}
{% block body %}
<div class="container">

  <div class="col-md-6">
    <h2>Lista clienti</h2>
    <br>

    <div class="input-group col-sm-6">
      <span class="input-group-btn">
        <button type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
      </span>
      <input type="text" class="form-control" placeholder="Cerca">
      <!-- /input-group -->
    </div><!-- /.col-lg-6 -->
    <br>
    <div class="panel panel-default">
      <!-- Table -->
      <table class="table">
        <thead class="thead-inverse">

          <tr>

            <th>Nome</th>
            <th>Cognome</th>
            <th>Nome supplementare</th>
            <th>Cognome supplementare</th>
            <th>Modifica</th>
           



          </tr>
        </thead>
        <tbody>
          {% for cliente in clienti %}
          <tr>
            <td>{{ cliente.nome }}</td>
            <td>{{ cliente.cognome }}</td>
            
          
            <ul><td>
                {% for persona in cliente.personeAggiuntive %}
                
                 <li>{{ persona.nome }}</li>

                 
                         
            {% endfor %}
</td>
</ul>
 <ul><td>
                {% for persona in cliente.personeAggiuntive %}
                
                 <li>{{ persona.cognome }}</li>

                 
                         
            {% endfor %}
</td>
</ul>
            <td><a class="ng-modal" href="{{ path('modifica_cliente', {id: cliente.id}) }}"><button type="button" class="btn btn-default">Edit</button></a></td>
          </tr>
          {% endfor %}
          
        </tbody>
      </table>
    </div>
    <!-- fine colonna form aggiungi cliente -->

  </div></div>
  <!-- inizio colonna form persone aggiuntive -->
  <div class="col-md-6">

  </div>
  <!-- fine colonna form persone aggiuntive -->
</div>

{%endblock%}